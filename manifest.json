{
    "manifest_version": 2,
    "name": "TraderMode",
    "version": "1.0",
    "description": "Supports the purchase of NBATopshot moments",
    "homepage_url": "https://github.com/countersoda/TraderMode-Extension",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "icons/basketball.png",
        "default_title": "TraderMode",
        "default_popup": "popup/traderMode.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.nbatopshot.com/*"
            ],
            "js": [
                "traderMode.js"
            ]
        }
    ]
}